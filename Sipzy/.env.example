# ========================================
# SIPZY ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# ========================================
# SOLANA CONFIGURATION
# ========================================

# Your deployed Sipzy Vault program ID
# Get this from: solana address -k target/deploy/sipzy_vault-keypair.json
NEXT_PUBLIC_PROGRAM_ID=your_program_id

# Treasury wallet for fee collection
# This receives the 1% trading fees from the bonding curve
NEXT_PUBLIC_TREASURY_ADDRESS=your_treasury_wallet_pubkey

# Solana RPC URL
# Localnet: http://127.0.0.1:8899
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
NEXT_PUBLIC_RPC_URL=https://api.devnet.solana.com

# Solana cluster (localnet, devnet, testnet, mainnet-beta)
NEXT_PUBLIC_CLUSTER=devnet

# ========================================
# x402 PAYMENT PROTOCOL CONFIGURATION
# ========================================

# Wallet address for receiving x402 USDC payments (premium content)
NEXT_PUBLIC_RECEIVER_ADDRESS=your_receiver_wallet_pubkey

# Network for x402 payments
# Options: solana-devnet, solana-mainnet-beta
NEXT_PUBLIC_NETWORK=solana-devnet

# x402 Facilitator URL (payment verification service)
NEXT_PUBLIC_FACILITATOR_URL=https://x402.org/facilitator

# Coinbase Developer Platform Client Key
# Get yours at: https://portal.cdp.coinbase.com/
NEXT_PUBLIC_CDP_CLIENT_KEY=your_cdp_client_key

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Base URL for Solana Actions/Blinks
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# App name displayed in payment modals
NEXT_PUBLIC_APP_NAME=Sipzy
